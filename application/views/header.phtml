<body>

{if !isset($inColorBox) || !$inColorBox}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#">ViMbAdmin{if not $hasIdentity} :: <em>Virtual Mailbox Administration</em>{/if}</a>

                {if $hasIdentity}
                    <div class="nav-collapse">
                        <ul class="nav">

                            <li {if $controller eq 'domain'}class="active"{/if}>
                                <a href="{genUrl controller='domain'}" title="Domains">Domains</a>
                            </li>
                            <li {if $controller eq 'mailbox'}class="active"{/if}>
                                <a href="{genUrl controller='mailbox'}" title="Mailboxes">Mailboxes</a>
                            </li>
                            <li {if $controller eq 'alias'}class="active"{/if}>
                                <a href="{genUrl controller='alias'}" title="Domains">Aliases</a>
                            </li>
                            <li {if $controller eq 'log'}class="active"{/if}>
                                <a href="{genUrl controller='log'}" title="Logs">Logs</a>
                            </li>
                            {if $hasIdentity and $identity.admin->isSuper()}
                                <li {if $controller eq 'admin'}class="active"{/if}>
                                    <a href="{genUrl controller='admin'}" title="Administrators">Administrators</a>
                                </li>
                            {/if}
                            <li>
                                <a id="modal-dialog-your_password" href="{genUrl controller='admin' action='password' aid=$identity.admin.id modal=true}">Password</a>
                            </li>
                        </ul>
                        <ul class="nav pull-right">
                            <li>
                                <a href="{genUrl controller='auth' action='logout'}" title="Logout">Logout</a>
                            </li>
                        </ul>
                    </div><!--/.nav-collapse -->
                {/if}
            </div>
        </div>
    </div>
{/if}


