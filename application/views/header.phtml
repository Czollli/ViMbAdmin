    <script type="text/javascript" src="{genUrl}/js/800-bootstrap.js"></script>
    <script type="text/javascript" src="{genUrl}/js/900-vimbadmin.validate.js"></script>
    <script type="text/javascript" src="{genUrl}/js/910-vimbadmin.functions.js"></script>
    <script type="text/javascript" src="{genUrl}/js/920-vimbadmin.tooltip.js"></script>
    <script type="text/javascript" src="{genUrl}/js/990-vimbadmin.js"></script>
{else}
    <script type="text/javascript" src="{genUrl}/js/min.bundle.js"></script>
{/if}

{if !$options.mini_css}
    <link rel="stylesheet" type="text/css" href="{genUrl}/css/110-jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="{genUrl}/css/130-colorbox.css" />
