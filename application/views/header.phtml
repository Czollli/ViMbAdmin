{if !$options.mini_js}
    <script type="text/javascript" src="{genUrl}/js/100-jquery.js"></script>
    <script type="text/javascript" src="{genUrl}/js/110-jquery-ui.js"></script>
    <script type="text/javascript" src="{genUrl}/js/120-jquery.validate.js"></script>
