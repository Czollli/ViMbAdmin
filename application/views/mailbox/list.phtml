{include file="header.phtml"}

{assign var='purgeMailboxParams' value="open: true, iframe: true, transition: 'elastic', width: '580px', height: '600px'"}
{assign var='editMailboxParams' value="open: true, iframe: true, transition: 'elastic', width: '680px', height: '440px'"}
{assign var='aliasesParams' value="open: true, iframe: true, transition: 'elastic', width: '800px', height: '600px'"}
{assign var='mailboxPasswordParams' value="open: true, iframe: true, transition: 'elastic', width: '800px', height: '300px'"}


<div class="page-content" >

    <div class="page-header" >

        <div style="float: right; margin-top: -10px;">
            <div class="btn-toolbar">
            	<span class="btn-group">
        	        <a class="btn" id="add_mailbox" href="#" onclick="$.fn.colorbox({ href:'{genUrl controller='mailbox' action='edit'}{if $domain}/did/{$domain.id}{/if}', {$editMailboxParams} });" title="Add Mailbox">
            	        <i class="icon-plus"></i>
        	        </a>
            	</span>
        	</div>
    	</div>

        <h1>Mailboxes {if $domain} for {$domain.domain} {if $domain.mailboxes neq 0}({$domain->countMailboxes()}/{$domain.mailboxes}){/if}{/if}</h1>
    </div>

{ViMbAdmin_Messages}

<table id="mailbox_list_table" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Domain</th>
            <th>Active</th>
            <th>
                <button onclick="$.fn.colorbox({ href:'{genUrl controller='mailbox' action='edit'}{if $domain}/did/{$domain.id}{/if}', {$editMailboxParams} });">Add Mailbox</button>
            </th>
        </tr>
    </thead>
    <tbody>
{foreach $mailboxes as $oneMailbox}
        <tr>
            <td>{$oneMailbox.username}</td>
            <td>{$oneMailbox.name}</td>
            <td>{$oneMailbox.domain}</td>
            <td>
                <div id="throb-toggle-active-{$oneMailbox.id}" style="float: right;"></div>
                <span id="toggle-active-{$oneMailbox.id}" class="btn btn-mini {if $oneMailbox.active}btn-success{else}btn-danger{/if}">{$oneMailbox.active|yesno}</span>
            </td>
            <td>
                <button class="btn btn-mini" onclick="$.fn.colorbox({ href:'{genUrl controller='mailbox' action='aliases' mid=$oneMailbox.id}', {$aliasesParams} });">Aliases</button>
                <button class="btn btn-mini" onclick="$.fn.colorbox({ href:'{genUrl controller='mailbox' action='purge' mid=$oneMailbox.id}', {$purgeMailboxParams} });">Purge</button>
                <button class="btn btn-mini" onclick="$.fn.colorbox({ href:'{genUrl controller='mailbox' action='password' mid=$oneMailbox.id}', {$mailboxPasswordParams} });">Password</button>
                <button class="btn btn-mini" onclick="$.fn.colorbox({ href:'{genUrl controller='mailbox' action='edit' mid=$oneMailbox.id}', {$editMailboxParams} });">Edit</button>
                <a class="btn btn-mini" href="{genUrl controller='mailbox' action='email-settings' mid=$oneMailbox.id}">Email Settings</a>
            </td>
        </tr>
{/foreach}
    </tbody>
</table>

<br />
<br />

<a class="btn" href="{genUrl controller='domain' action='list'}">Back to domain list</a>

{include file='mailbox/js/list.js'}

</div>

{include file="footer.phtml"}
