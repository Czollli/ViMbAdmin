{include file="header.phtml"}

{assign var='changePwdParams' value="open: true, iframe: true, transition: 'elastic', width: '700px', height: '270px'"}
{assign var='addAdminParams' value="open: true, iframe: true, transition: 'elastic', width: '500px', height: '400px'"}
{assign var='domainListParams' value="open: true, iframe: true, transition: 'elastic', width: '700px', height: '600px'"}

<div class="page-content" >

    <div class="page-header" >
        <h1>Admin List</h1>
    </div>

{ViMbAdmin_Messages}

<table id="admin_list_table" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Active</th>
            <th>Super</th>
            <th>
                <button onclick="$.fn.colorbox({ href:'{genUrl controller='admin' action='add'}', {$addAdminParams} });">Add admin</button>
            </th>
        </tr>
    </thead>
    <tbody>
{foreach $admins as $oneAdmin}
        <tr id="admin_{$oneAdmin.id}" {if $identity.admin.id == $oneAdmin.id}class="bold"{/if}>
            <td>{$oneAdmin.username}</td>
            <td>
                <div id="throb-toggle-active-{$oneAdmin.id}" style="float: right;"></div>
                {if $identity.admin.id != $oneAdmin.id}
                    <span id="toggle-active-{$oneAdmin.id}" class="btn btn-mini {if $oneAdmin.active}btn-success{else}btn-danger{/if}">{$oneAdmin.active|yesno}</span>
                {else}
                    <span id="toggle-active-{$oneAdmin.id}" class="btn btn-mini disabled {if $oneAdmin.active}btn-success{else}btn-danger{/if}">{$oneAdmin.active|yesno}</span>
                {/if}
            </td>
            <td>
                {if $identity.admin.id != $oneAdmin.id}
                    <span id="toggle-super-{$oneAdmin.id}" class="btn btn-mini {if $oneAdmin.super}btn-success{else}btn-danger{/if}">{$oneAdmin.super|yesno}</span>
                {else}
                    <span id="toggle-super-{$oneAdmin.id}" class="btn btn-mini disabled {if $oneAdmin.super}btn-success{else}btn-danger{/if}">{$oneAdmin.super|yesno}</span>
                {/if}
            </td>
            <td>
                <button class="btn btn-mini" onclick="$.fn.colorbox({ href:'{genUrl controller='admin' action='password'}/aid/{$oneAdmin.id}', {$changePwdParams} });">Password</button>
                <a class="btn btn-mini" href="{genUrl controller='log' action='list'}/aid/{$oneAdmin.id}">Log</a>
                {if not $oneAdmin.super}
                    <button class="btn btn-mini" onclick="$.fn.colorbox({ href:'{genUrl controller='admin' action='domains'}/aid/{$oneAdmin.id}', {$domainListParams} });">Domains</button>
                {/if}
                {if $identity.admin.id neq $oneAdmin.id}
                    <button class="btn btn-mini" onclick="purgeAdmin({$oneAdmin.id}, '{$oneAdmin.username}');">Purge</button>
                {/if}
            </td>
        </tr>
{/foreach}
    </tbody>
</table>

{include file='admin/js/list.js'}
<br />
</div>
{include file="footer.phtml"}
