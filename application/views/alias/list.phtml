{include file="header.phtml"}

{assign var='editAliasParams' value="open: true, iframe: true, transition: 'elastic', width: '750px', height: '500px'"}

<div class="page-content" >

    <div class="page-header" >

        <div style="float: right; margin-top: -10px;">
            <div class="btn-toolbar">
            	<span class="btn-group">
        	        <a class="btn" id="modal-dialog-add_alias" href="{genUrl controller='alias' action='edit' modal=true}" title="Add Alias">
            	        <i class="icon-plus"></i>
        	        </a>
            	</span>
            	<span class="btn-group" data-toggle="buttons-checkbox">
        	        <span class="btn {if $includeMailboxAliases}active{/if}" id="ima" title="Include mailbox aliases" >
            	        Include mailbox aliases
        	        </span>
            	</span>
        	</div>
    	</div>

        <h1>
            Aliases {if $domain}<small> for {$domain.domain} {if $domain.aliases neq 0}({$domain->countAliases()}/{$domain.aliases}){/if}</small>{/if}

            {if isset( $session->domain ) && $session->domain}
                <a class="btn" title="Show All" href="{genUrl controller='alias' action='list' unset=1}"><i class="icon-remove-circle"></i></a>
            {/if}
        </h1>
    </div>

{ViMbAdmin_Messages}

<br/>

<table id="domain_aliases_table" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Address</th>
            <th>Domain</th>
            <th>Active</th>
            <th>Goto</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {foreach $aliases as $oneAlias}
        <tr id="alias_{$oneAlias.id}">
            <td>{$oneAlias.address}</td>
            <td>{$oneAlias.domain}</td>
            <td>
                <div id="throb-toggle-active-{$oneAlias.id}" style="float: right;"></div>
                <span id="toggle-active-{$oneAlias.id}" onclick="toggleActive( 'toggle-active-{$oneAlias.id}', {$oneAlias.id} );" class="btn btn-mini {if $oneAlias.active}btn-success{else}btn-danger{/if}">{$oneAlias.active|yesno}</span>
            </td>
            <td id="alias-goto-{$oneAlias.id}">
                {$oneAlias.goto|shorten:50}
                {if strlen( $oneAlias.goto ) > 50 }
                    <script type="text/javascript">
                        $( document ).ready( function(){
                            $( "#alias-goto-{$oneAlias.id}" ).tooltip({ trigger: 'hover', delay: { show: 2000, hide: 100 }, title: '{$oneAlias.goto|regex_replace:"/[,]/":", "}' });
                        });
                    </script>
                {/if}
            </td>
            <td>
                <a class="btn btn-mini" id="modal-dialog-edit_alias_{$oneAlias.id}" href="{genUrl controller='alias' action='edit' alid=$oneAlias.id modal=true}">Edit</a>
                <span class="btn btn-mini" id="delete-alias-{$oneAlias.id}" onclick="deleteAlias( {$oneAlias.id} );">Delete</span>
            </td>
        </tr>
    {/foreach}
    </tbody>
</table>

<br />
<br />
<br />

{include file='alias/js/list.js'}

<div id="purge_dialog" class="modal hide fade">
    <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal">&times;</a>
        <h3>Are you sure?</h3>
    </div>
    <div class="modal-body">
        Are you sure you want to delete this alias?
    </div>
    <div id="pdfooter" class="modal-footer">
        <span class="btn btn-danger" id="purge_dialog_delete">Delete</span>
        <button id="purge_dialog_cancel" class="btn">Cancel</button>
    </div>
</div>

</div>
{include file="footer.phtml"}
